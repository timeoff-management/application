
{{> header }}

<h1>New Leave Type</h1>

<p class="lead">Adding new leave type</p>

{{> show_flash_messages }}

<form class="form-horizontal" method="POST" action="/leave_types/add/" id="add_new_user_form">

  <div class="form-group">
    <label for="name_inp" class="col-md-3 control-label">Name</label>
    <div class="col-md-3">
      <input class="form-control" id="name_inp" name="name" required value="{{employee.name}}">
    </div>
  </div>

  <div class="form-group">
    <label for="lastname_inp" class="col-md-3 control-label">Color</label>
    <div class="col-md-3">
      <input class="form-control" id="lastname_inp" name="color" required value="{{employee.color}}">
    </div>
  </div>

  <div class="form-group">
    <label for="lastname_inp" class="col-md-3 control-label">Use Allowance</label>
    <div class="col-md-3">
      <input class="form-control" id="lastname_inp" name="use_allowance" required value="{{employee.use_allowance}}">
    </div>
  </div>

  <div class="form-group">
    <label for="lastname_inp" class="col-md-3 control-label">limit</label>
    <div class="col-md-3">
      <input class="form-control" id="lastname_inp" name="limit" required value="{{employee.limit}}">
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-3">
      <button type="submit" class="btn btn-success pull-right">Save changes</button>
    </div>
  </div>
</form>

{{> footer }}
